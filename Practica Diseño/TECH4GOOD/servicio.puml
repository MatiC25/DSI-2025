class Hackathon {
    - organizacionResponsable: String 
    - sitioWeb: String 
    - ubicacion: Ubicacion 
    - cantEstimadaParticipantes: Int 
    - nivelExperienciaParticipantes: NivelExperiencia
    - objetivos: List<Objetivo>
    - stackTecnologicoPlanteado: Tecnologia
    - historialModificaciones: List<HackathonModificacion>
    - duracion: String (hs)
    - hackathonFinalizado: HackathonFinalizado
}

class HackathonFinalizado {
    - imagenes: List<Path>
    - videos: List<Path>
    - comentarios: List<String>
    - organizacionParticipo: Organizacion
    - tecnologiaAbordada: Tecnologia
}

class Tecnologia {
    - nombre: String 
}

enum NivelExperiencia {
    PRINCIPIANTE
    INTERMEDIO
    AVANZADO
}

Hackathon --> Ubicacion
Hackathon --> NivelExperiencia
HackathonFinalizado --> Organizacion
HackathonFinalizado --> Tecnologia 

Hackathon --> Tecnologia
Hackathon --> HackathonFinalizado

class MatchMaking {
    - algoritmos: List<IAlgoritmo>
    - adapter: INotificador 

    + asignar(Necesidad, Hackathong): Asignacion
    + notificar(Organizacion)
}

MatchMaking .. NecesidadTecnologica
MatchMaking .. Hackathon
MatchMaking -->"*" IAlgoritmo
MatchMaking --> INotificador

interface IAlgoritmo {
    + ejecutar(List<NecesidadTecnologica>, Hackathon): NecesidadTecnologica
}

class Complejidad implements IAlgoritmo {
    - adapterIA: IAdapterIA
    + determinar(NivelExperiencia): TiempoEstimado
    + ejecutar(List<NecesidadTecnologica>, Hackathon): NecesidadTecnologica
}

class Cercania implements IAlgoritmo {
    + ejecutar(List<NecesidadTecnologica>, Hackathon): NecesidadTecnologica
}

class Asignacion {
    - estado: Estado 
    - modificadorPor: nombreAdministrador
    - fechaModificacion: LocalDateTime
    - hackathon: Hackathon
    - necesidad: NecesidadTecnologica
}

interface INotificador {
    + notificar(destinatario, mensaje)
}

class MailSender implements INotificador {
    + notificar(destinatario, mensaje)
}

Asignacion --> Estado
Asignacion --> Hackathon
Asignacion --> NecesidadTecnologica

@enduml