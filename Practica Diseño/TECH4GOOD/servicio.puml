@startuml

class Organizacion {
    - nombreLegal: String 
    - CUIT: String 
    - tipoOrganizacion: tipoOrganizacion
    - sede: Ubicacion
    - telefono: String 
    - correo: String 
    - area: Area 
    - necesidades: List<NecesidadTecnologica>
}

class Miembro {
    - nombre: String 
    - apellido: String 
}

class tipoOrganizacion {
    - nombre: String 
}

class Ubicacion {
    - calle: String
    - altura: String 
    - lat: Double 
    - long: Double 
}

class Area {
    - nombre: String 
}

class Validador {
    - adapter: IValidador

    + validar(CUIT): Boolean
}

interface IValidador {
    + validar(CUIT): Boolean
}

class AdapterArca implements IValidador {
    + validar(CUIT): Boolean
}

class NecesidadTecnologica {
    - descripcion: String
    - fechaCreacio√≥n: LocalDateTime
    - estadoActual: Estado
    - estados: List<CambioEstado> 
    - modificacion: List<NecesidadModificada>
}

class CambioEstado {
    - estado: Estado 
    - fechaRealizacion: LocalDateTime
    - motivo: String 
}

enum Estado {
    PENDIENTE 
    REVISION 
    RECHAZADA
    ACEPTADA
}

CambioEstado --> Estado

NecesidadTecnologica -->"*" CambioEstado
NecesidadTecnologica --> Estado
NecesidadTecnologica -->"*" NecesidadModificada

